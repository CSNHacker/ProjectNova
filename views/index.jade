extends layout

block content
    div(role="navigation").navbar.navbar-default
        .container-fluid
            //.navbar-header

            a.navbar-brand(href='/').font3.red.center-block
                    Bigdata


    ul
        mixin article(article)
             h1.blog-title.font1.red  #{article.title}
             div.
             p.well #{article.content}
             h2.font2 Keywords
             p.font1
                each word,i in article.keywords
                     button.btn.btn-info #{word}
             h2.font2 Related articles
             p
                each source,i in article.source
                     p #{i + 1}.
                         a.btn-link(href=source.link)=source.atitle

        each article, i in userlist

                     li
                           +article(article)

                      div

                          if(article.page > 1)
                              button.btn

                                  a.pager(href='?page=' + (article.page-1)) Previous




                          if(article.page<4)
                                  button.btn
                                        a.pager(href='?page=' +(article.page+1)) Next

